<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>true</primitive>
  <annotatorImplementationName>com.mnsuk.uima.NLC</annotatorImplementationName>
  <analysisEngineMetaData>
    <name>NLUAEDescriptor</name>
    <description/>
    <version>1.0.0</version>
    <vendor/>
    <configurationParameters defaultGroup="Configure" searchStrategy="language_fallback">
    	<configurationParameter>
          <name>username</name>
          <type>String</type>
          <multiValued>false</multiValued>
          <mandatory>true</mandatory>
        </configurationParameter>
        <configurationParameter>
          <name>password</name>
          <type>String</type>
          <multiValued>false</multiValued>
          <mandatory>true</mandatory>
        </configurationParameter>     
        <configurationParameter>
        <name>classifier</name>
        <description>Unique identifier for the classifier to use.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    <configurationParameter>
        <name>threshold</name>
        <description>Value 0.0 to 1.0
Classification classes that have a confidence value below this threshold will not be returned. Defaults to 0.1</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>top_only</name>
        <description>By default only the class with the highest confidence will be returned. Set to false to have the top 5 classes returned.</description>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
        <nameValuePair>
          <name>password</name>
          <value>
            <string>Service credentials password</string>
          </value>
        </nameValuePair>
        <nameValuePair>
          <name>username</name>
          <value>
            <string>Service credentials username</string>
          </value>
        </nameValuePair>
        <nameValuePair>
        <name>classifier</name>
        <value>
          <string>classifier id</string>
        </value>
      </nameValuePair>
    <nameValuePair>
        <name>threshold</name>
        <value>
          <string>0.1</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>top_only</name>
        <value>
          <boolean>true</boolean>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
      <types>
        <typeDescription>
          <name>com.mnsuk.nlc.Result</name>
          <description/>
          <supertypeName>uima.tcas.Annotation</supertypeName>
          <features>
            <featureDescription>
              <name>topClass</name>
              <description/>
              <rangeTypeName>uima.cas.String</rangeTypeName>
            </featureDescription>
            <featureDescription>
              <name>confidence</name>
              <description/>
              <rangeTypeName>uima.cas.String</rangeTypeName>
            </featureDescription>
                        <featureDescription>
